#version 400 core

layout(triangles, equal_spacing, ccw) in;

in vec3 position[];
in vec3 normal[];

out vec3 mid_position;
out vec3 mid_normal;

void main()
{
    mid_position = gl_TessCoord.x * position[0] + gl_TessCoord.y * position[1] + gl_TessCoord.z * position[2];
    mid_normal = gl_TessCoord.x * normal[0] + gl_TessCoord.y * normal[1] + gl_TessCoord.z * normal[2];

}




